<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ParseWord"
        android:id="@+id/parseJSON"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parse"
        android:id="@+id/parse_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="onParse"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ID"
        android:id="@+id/IDString"
        android:layout_below="@+id/parseJSON"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="name"
        android:id="@+id/nameTest"
        android:layout_below="@+id/IDString"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ReadTest"
        android:id="@+id/readTest"
        android:layout_above="@+id/parse_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:onClick="onGetText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="jsonText"
        android:id="@+id/jsonText"
        android:layout_below="@+id/nameTest"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Music"
        android:id="@+id/play_music"
        android:layout_above="@+id/readTest"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:onClick="onPlayMusic"/>
</RelativeLayout>
